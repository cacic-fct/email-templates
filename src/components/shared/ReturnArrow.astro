---
interface Props {
  text?: string;
  path?: string;
}

let { text, path } = Astro.props;

// Remove initial slash from path
if (path && path.startsWith("/")) {
  path = path.slice(1);
}
---

<h1><a role="button" href={path || "../"}>‚Üê</a> {text || ""}</h1>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }

  a:hover {
    text-decoration: underline;
  }
</style>
