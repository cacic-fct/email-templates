---
import Layout from "./Layout.astro";
import CacicLogo from "../assets/templates/CacicUnespBlue/cacic-logo.png";
---

<Layout>
  <html>
    <head>
      <style>
        img + div {
          display: none;
        }
        body {
          margin: 0;
        }
      </style>
    </head>
    <body>
      <table
        width="100%"
        cellspacing="0"
        cellpadding="0"
        border="0"
        align="center"
        style="
            font-family: 'Helvetica Neue', Arial, Helvetica, Verdana, sans-serif;
            font-size: 18px;
            background-color: #e2e2e2;
          "
      >
        <tr>
          <td style="line-height: 120px">&nbsp;</td>
        </tr>
        <tr>
          <td>
            <table
              width="692"
              cellspacing="0"
              cellpadding="0"
              border="0"
              align="center"
              style="background-color: #009fe0; padding: 10px"
            >
              <tr>
                <td style="padding: 10px; background-color: #fff">
                  <table width="100%" cellspacing="0" cellpadding="0" border="0">
                    <tr>
                      <td
                        style="
                            width: 604px;
                            font-size: 1em;
                            line-height: 24px;
                            font-family: 'Helvetica Neue', Arial, Helvetica, Verdana, sans-serif;
                            text-align: justify;
                            color: #262f2b;
                          "
                      >
                        <a href="https://cacic.dev.br">
                          <img
                            style="
                            width: 50%;
                            margin-left: auto;
                            margin-right: auto;
                            display: block;
                          "
                            src={CacicLogo.src}
                            alt="Logo CACiC"
                          />
                        </a>
                        <br /><br />
                        <slot />
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td style="line-height: 120px">&nbsp;</td>
        </tr>
      </table>
    </body>
  </html>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</Layout>
